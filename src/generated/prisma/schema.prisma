generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Todo {
  id                  Int     @id @default(autoincrement())
  productName         String
  image               String
  color               String
  price               Int
  hasDiscount         Boolean
  discountPrice       Int
  quantity            Int
  productInMyCart     Boolean
  categoryId          Int
  categoryName        String
  productInfoFromCart String?
  done                Boolean @default(false)
}
